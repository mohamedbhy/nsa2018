<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/further_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10sp"
    android:layout_marginRight="10sp"
    android:layout_marginLeft="10sp"
    android:layout_marginBottom="10sp"
    app:layout_constraintTop_toBottomOf="@id/cp">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5sp"
        android:paddingRight="5sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/dw"
            android:textColor="@color/bgs"
            android:text="@string/details"/>
        <TextView
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/dw"
            android:text="Engine failure at 33 seconds and loss of vehicle"/>
        <TextView
            android:id="@+id/mdw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/bgs"
            android:text="@string/more_details"
            app:layout_constraintTop_toBottomOf="@id/details"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="here"
            android:textColor="@color/four"
            android:id="@+id/more_details"
            app:layout_constraintStart_toEndOf="@id/mdw"
            app:layout_constraintTop_toBottomOf="@id/details"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>